{
  "version": 2,
  "name": "primer-design",
  "alias": "primer-design.now.sh",
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "routes": [
    {"src": "/design/foundation(/typography)?/?$", "dest": "/design/foundations/$1"},
    {"src": "/design(/.*)?", "dest": "$1"},
    {
      "src": "/",
      "status": 301,
      "headers": {"Location": "/design"}
    }
  ]
}
